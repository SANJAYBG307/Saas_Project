[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .pytest_cache,
    htmlcov,
    build,
    dist,
    *.egg-info

ignore =
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
    E501,  # line too long (let black handle this)

per-file-ignores =
    __init__.py: F401
    settings.py: E501
    */tests.py: F401,F811